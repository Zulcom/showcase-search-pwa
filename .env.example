# GitHub API Configuration
VITE_GITHUB_API_URL=https://api.github.com
VITE_GITHUB_TOKEN=                          # Optional: GitHub personal access token for higher rate limits

# Cache Settings
VITE_CACHE_TTL_MS=300000                    # Cache TTL in milliseconds (default: 5 minutes)
VITE_CACHE_MAX_ENTRIES=50                   # Maximum cache entries before LRU eviction

# Retry Settings
VITE_RETRY_COUNT=3                          # Number of retry attempts
VITE_RETRY_MIN_TIMEOUT_MS=1000              # Minimum delay between retries (ms)
VITE_RETRY_MAX_TIMEOUT_MS=10000             # Maximum delay between retries (ms)

# Pagination
VITE_REPOS_PER_PAGE=30                      # Repositories per page
VITE_USERS_PER_PAGE=5                       # Users per search

# UI Settings
VITE_REPO_LIST_MAX_HEIGHT=400               # Max height for repo list scroll (px)
VITE_REPO_LIST_SCROLL_THRESHOLD=10          # Min repos to enable scrolling
VITE_LOAD_MORE_THRESHOLD=100                # Pixels from bottom to trigger load more
